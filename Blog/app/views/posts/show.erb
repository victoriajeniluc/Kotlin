<div id="post_content">
	<h1 class ="title"><%= @post.title %></h1>
	<p class="body"><%= @post.body %></p>
	<p class="body"><%= @post.gratitude %></p>
	<p class ="date"><%= @post.created_at.strftime("%B %d, %Y") %> | <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete' , post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %></p>
</div>